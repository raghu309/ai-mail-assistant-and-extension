{
  "name": "AI Email Assistant",
  "description": "Generate replies to email with this extension.",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8080/*", "*://mail.google.com/*"],
  "action": {
    "default_title": "AI Email Assistant"
  },
  "content_scripts": [
    {
      "js": ["app.js"],
      "matches": ["*://mail.google.com/*"],
      "css": ["app.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["*://mail.google.com/*"]
    }
  ]
}
